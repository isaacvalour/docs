{
  "openapi": "3.1.0",
  "info": {
    "title": "HashRails API",
    "description": "Complete API specification for HashRails - a comprehensive financial services platform providing KYC, payments, virtual accounts, and compliance solutions.",
    "version": "1.0.0",
    "contact": {
      "name": "HashRails API Support",
      "url": "https://docs.railsfromthecrypt.com",
      "email": "support@railsfromthecrypt.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://api.Hashrails.xyz/v1/",
      "description": "Production server"
    },
    {
      "url": "https://staging-api.railsfromthecrypt.com/",
      "description": "Staging server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    },
    {
      "apiKey": []
    }
  ],
  "paths": {
    "/public/health": {
      "get": {
        "tags": [
          "Public"
        ],
        "summary": "Health check endpoint",
        "description": "Check the health status of the API service",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthCheck"
                }
              }
            }
          }
        }
      }
    },
    "/public/rates": {
      "get": {
        "tags": [
          "Public"
        ],
        "summary": "Get exchange rates",
        "description": "Retrieve current exchange rates for supported currencies",
        "operationId": "getRates",
        "responses": {
          "200": {
            "description": "Exchange rates retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "from": {
                            "type": "string",
                            "example": "USD"
                          },
                          "to": {
                            "type": "string",
                            "example": "NGN"
                          },
                          "rate": {
                            "type": "number",
                            "example": 1500.50
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/public/currencies": {
      "get": {
        "tags": [
          "Public"
        ],
        "summary": "Get supported currencies",
        "description": "Retrieve list of supported currencies",
        "operationId": "getCurrencies",
        "responses": {
          "200": {
            "description": "Currencies retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "code": {
                            "type": "string",
                            "example": "USD"
                          },
                          "name": {
                            "type": "string",
                            "example": "US Dollar"
                          },
                          "symbol": {
                            "type": "string",
                            "example": "$"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/public/networks": {
      "get": {
        "tags": [
          "Public"
        ],
        "summary": "Get supported networks",
        "description": "Retrieve list of supported blockchain networks",
        "operationId": "getNetworks",
        "responses": {
          "200": {
            "description": "Networks retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "polygon"
                          },
                          "name": {
                            "type": "string",
                            "example": "Polygon"
                          },
                          "chainId": {
                            "type": "number",
                            "example": 137
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HealthCheck": {
        "type": "object",
        "properties": {
          "status": {
            "type": "boolean",
            "example": true
          },
          "service": {
            "type": "string",
            "example": "HashRails API service"
          }
        },
        "required": [
          "status",
          "service"
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "status": {
            "type": "number",
            "example": 400
          },
          "message": {
            "type": "string",
            "example": "Bad Request"
          },
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string",
                "example": "VALIDATION_ERROR"
              },
              "details": {
                "type": "string",
                "example": "Invalid input data"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "token": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "name": "JWT",
        "description": "Enter JWT token",
        "in": "header"
      },
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  }
}